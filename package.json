{
	"private": true,
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "all"
	},
	"babel": {
		"presets": ["freddie-ridell"]
	},
	"devDependencies": {
		"eslint": "^4.19.1",
		"lerna": "^2.11.0"
	},
	"scripts": {
		"build": "lerna run build",
		"vimEach": "lerna exec vim",
		"deploy-jask":
			"lerna bootstrap && lerna run build && cd packages/jec-jask-web && npm run pack",
		"publish":
			"lerna run format && lerna run build && lerna publish --force-publish=*",
		"watch": "lerna run --parallel watch"
	},
	"dependencies": {
		"babel-preset-freddie-ridell": "0.0.7",
		"babel-runtime": "^6.26.0"
	}
}
