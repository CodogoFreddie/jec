{
	"private": true,
	"workspaces": [ "libraries/jec-client-cli", "libraries/jec-cli-interface", "libraries/jec-config-fetcher", "libraries/jec-engine", "libraries/jec-pure-cli", "runnables/jec-jask", "runnables/jec-server" ],
	"files": [
		"lib"
	],
	"eslintConfig": {
		"extends": "codogo"
	},
	"babel": {
		"presets": [
			"env",
			"flow"
		],
		"plugins": [
			"preval",
			[
				"transform-object-rest-spread",
				{
					"useBuiltIns": true
				}
			]
		]
	},
	"scripts": {
		"publish-all": "for x in jec-* ; yarn publish $x ; done"
	}
}
