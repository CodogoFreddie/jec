{
	"private": true,
	"eslintConfig": {
		"extends": "react-app"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"trailingComma": "all"
	},
	"babel": {
		"presets": [
			"stage-3",
			"react",
			[
				"env",
				{
					"modules": "commonjs"
				}
			]
		],
		"plugins": [
			"transform-class-properties",
			[
				"transform-runtime",
				{
					"polyfill": false,
					"regenerator": true
				}
			]
		]
	},
	"devDependencies": {
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-codogo": "^3.0.5",
		"eslint": "^4.18.2",
		"lerna": "^2.7.1"
	},
	"scripts": {
		"build": "lerna run build",
		"deploy-jask": "cd packages/jec-jask-web && npm i && npm run build",
		"format": "lerna run format",
		"publish": "lerna run format && lerna run build && lerna publish",
		"watch": "lerna run --parallel watch"
	},
	"dependencies": {
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-3": "^6.24.1",
		"babel-runtime": "^6.26.0"
	}
}
